@page  "/ProfesionalSkillEdict-1"
@model ITQJ.WebPWA.Pages.ProfesionalSkillEdict1Model

@{
    ViewData["Title"] = "Profesional Skill Edict";
    int cont = 0;
    string _Key = string.Empty;
}


<form action="/ProfesionalSkillEdict1/OnPostAsync" method="post">


    @for (int i = 0; i < Model.DisctListSkill1.Count; i++)
    {
        cont = 0;

        <hr />

        <div class="top-row bg-light" style="float: none; clear:both; position:relative; margin-top:20px; ">


            @foreach (var key in Model.DisctListSkill1.Keys)
            {


                if (cont == i)
                {
                    <h3> @key </h3>

                    _Key = key;
                }

                cont++;

            }

        </div>

        <hr />

        @for (int j = 0; j < @Model.DisctListSkill1[_Key].Count; j++)
        {
            <div class="icon-skill-edict">

                <div class="ContSkill1">

                    <div class="conte-Edict">

                        <div class="ContSkill2">

                            <div class="titulo" style="">

                                <label>@Model.DisctListSkill1[_Key][j].Name</label> <input class="Check" type="checkbox" asp-for="@Model.DisctListSkill1[_Key][j].Active" />

                            </div>
                            <input hidden asp-for="@Model.DisctListSkill1[_Key][j].Path" />
                            <input hidden asp-for="@Model.DisctListSkill1[_Key][j].Name" />

                            <div class="DivIMG" style=""><a onclick=""><i aria-hidden="true"> <img src="@Model.DisctListSkill1[_Key][j].Path" asp-append-version="true" /></i></a> </div>

                        </div>

                        <div class="ContPorcen">

                            <label> % </label>

                            <input type="number" asp-for="@Model.DisctListSkill1[_Key][j].Percentage" min="0" max="100" class="Procen">

                        </div>

                    </div>

                </div>

            </div>

        }

    }



    <input type="submit" class="btn badge-dark" value="Siguiente Habilidades" />

</form>


