@page
@model ITQJ.WebPWA.Pages.RegistroModel

@{
    ViewData["Title"] = "Registro";
}

    <div class="row">

        <div class="col m-0 p-0" style="height:600px">

            <img src="/Image/Empleos-Y-Negocios-.png" style=" position:relative; top:0px; left:0px; width:100%; height:100%; display:inline-block; " />

            <div style="        
            position: absolute;
            top: 50%;
            left: 50%;
            display: block;
            transform: translate(-50%,-50%);
            width: 360px;
            padding: 30px;
            box-shadow: 5px 10px 18px #888888;
            border-radius: 20px;">

                <h2>Crear nuevo usuario</h2>

                <form action="/action_page.php" class="col text-sm-left">

                    <label>Nombre de Usuario</label>
                    <br>
                    <input type="text" />
                    <br>
                    <label>Contraseña</label>
                    <br>
                    <input type="password" />
                    <br>
                    <label>Email</label>
                    <br>
                    <input type="email" asp-validation-for="Email"  />
                    <br>
                    <label>Rol</label>
                    <br>
                    <input type="radio" name="gender" value="Profecional">
                    <label for="Profecional">Profecional</label>
                    <br>

                    <input type="radio" name="gender" value="Empleador">
                    <label for="Empleador">Empleador</label>


                    <hr />

                    <a asp-page="/Index">

                        <input class="btn btn-dark col" type="submit" value="Registarse">

                    </a>

                </form>

            </div>

        </div>

    </div>

