
@model ITQJ.Domain.DTOs.PersonalInfoResponseDTO;

@{
    ViewData["Title"] = "Pagina de perfil del Profesional";

}


    <img src="/Image/gestion-del-conocimiento.png" style="opacity:0.2; border-radius:0%; z-index:1; position:absolute; top:50px; left:0px; width:100%; height:100%; display:inline-block; " />

<h2 class="m-4"> Informacion Profecional </h2>

<div class="position-relative" style="z-index:2; ">

    <div class="border pt-1 pl-1 pr-1 pb-0 m-2 badge-primary" style=" border-radius:70% 70% 0% 0%">

        <div class="border pt-1 pl-1 pr-1 pb-0 m-0 badge-dark" style=" border-radius:70% 70% 0% 0%">

            <div class="border p-1 m-0 badge-light text-center text-dark" style="position:relative; left:50%; transform:translateX(-50%); border-radius:70% 70% 0% 0%">

                <h1 class="display-2"></h1>

            </div>

        </div>

    </div>

    <form asp-action="EditContratist" asp-controller="PersonalInfo" method="post">

        <div class="border badge-pill bg-primary mt-3" style="border: 1px solid white;">

            <h4 id="Lname" asp-for="Name">Nombre</h4>

            <input id="Tname"  style="margin-left:10px;" type="text" asp-for="Name" />

            <span asp-validation-for="Name" class="text-danger"></span>

            <p id="Mname" class="h2"> Nombre: @Model.Name </p>

        </div>

        <div class="border badge-pill bg-primary mt-3" style="border: 1px solid white;">

            <h4 id="Lemail"  asp-for="User.Email">Correo</h4>

            <input id="Temail" style="margin-left:10px;" type="email" asp-for="User.Email" />

            <span asp-validation-for="User.Email" class="text-danger"></span>

            <p id="Memail" class="h2"> Correo:  @Model.User.Email </p>

        </div>

        <div class="border badge-pill bg-primary mt-3" style="border: 1px solid white;">

            <h4 id="Lnumero"  asp-for="PhoneNumber" >Numero de telefono</h4>

            <input id="Tnumero" style="margin-left:10px;" type="text" asp-for="PhoneNumber" />

            <span asp-validation-for="PhoneNumber" class="text-danger"></span>

            <p id="Mnumero" class="h2"> Numero de telefono: @Model.PhoneNumber </p>

        </div>

        <div class="border badge-pill bg-primary mt-3" style="border: 1px solid white;">

            <h4 id="Lling"  asp-for="PagLink">Pagina</h4>

            <input style="margin-left:10px;" id="Tling" type="text" asp-for="PagLink" />

            <span asp-validation-for="PagLink" class="text-danger"></span>

            <p class="h2" id="Mling"> Pagina Web: <a src="@Model.PagLink">@Model.PagLink </a></p>

        </div>

        <div class="border badge-pill bg-primary mt-3" style="border: 1px solid white;">

            <h4 id="Ldescripcion" asp-for="Description" >Description</h4>

            <input id="Tdescripcion" style="margin-left:10px;" margin-left:10px;" type="text" asp-for="Description" />

            <span asp-validation-for="Description" class="text-danger"></span>

            <p id="Mdescripcion" class="h2"> Descripción: @Model.Description </p>

        </div>

        <div class="d-inline-block">

            <input id="bntGuardar" class="btn btn-dark m-3" type="submit" value="Guardar" />

            <input id="bntCancelar" class="btn btn-dark m-3" type="button" value="Cancelar" onclick="Cancelar()" />

        </div>

    </form>

    <input id="bntEditar" class="btn btn-dark m-3" type="button" value="Editar inforamción" onclick="Edit()" />

</div>


<div class="position-relative mt-5" style="z-index:2;">

    <h1 class="mb-5">Profesional Skill</h1>


    @foreach (ITQJ.Domain.DTOs.ProfesionalSkillResponseDTO skill in Model.ProfesionalSkills)
    {

        <div class="icon-skill">

            <div class="ContSkill1">

                <div class="conte">

                    <div class="ContSkill2">

                        <div class="titulo">

                            <strong> @skill.Skill.Name</strong>

                        </div>

                        <div id="Estellas"><a onclick=""><i aria-hidden="true"><img src="@skill.Skill.Path" /></i></a> </div>

                    </div>

                    <div>

                        <div class="progress-bar blue stripes shine ">
                            <span style=" width: @(Convert.ToString(skill.Percentage) + "%")"></span>
                        </div>

                    </div>

                    <br />
                    <br />

                </div>

            </div>

        </div>



    }


    <div class="mt-3 position-relative pb-1">

        <a style="color: white; text-decoration: none;}" class="btn btn-dark" asp-page="/ProfesionalSkillEdict-1"> Editar skills </a>

    </div>

</div>
