@model ITQJ.WebClient.ViewModels.UserVM;
@{
    ViewData["Title"] = "Registro de Usuario";
}

<div class="row">

    <div class="col m-0 p-0" style="height:600px">

        <img src="/Image/Empleos-Y-Negocios-.png" style=" position:relative; top:0px; left:0px; width:100%; height:100%; display:inline-block; " />

        <div style="
            position: absolute;
            top: 50%;
            left: 50%;
            display: block;
            transform: translate(-50%,-50%);
            width: 360px;
            padding: 30px;
            box-shadow: 5px 10px 18px #888888;
            border-radius: 20px;">

            <h2>Finalizar proseso de registro de usuario</h2>

            <form asp-action="Register" class="col text-sm-left" method="post">

                <div class="form-group">

                    <label asp-for="Email" class="control-label">@Model.Email</label><br />

                    <input type="email" asp-for="Email" hidden /><br />

                    <span asp-validation-for="Email" class="text-danger"></span>

                </div>

                <div class="form-group">

                    <label asp-for="Role">Rol</label>

                    <select asp-for="Role"
                            class="dropdown"
                            asp-items="@(new SelectList(Model.Roles))" required>
                    </select>

                </div>

                <hr />

                <input class="btn btn-dark col" type="submit" value="Registarse">

            </form>

        </div>

    </div>

</div>

