@model ITQJ.Domain.DTOs.ProjectResponseDTO;
@{
    ViewData["Title"] = "Projecto";
    Model.PublishDate = DateTime.Now;
    Model.CloseDate = DateTime.Now;
    Model.PostulantsLimit = 0;
    var fecha = "  " + Model.PublishDate.ToString();

    var CheckPostulant = "CheckPostulant";
    var MaxPastilants = "MaxPastilants";
    var CheckCloseDate = "CheckCloseDate";
    var InputCloseDate = "InputCloseDate";

}

<div class="text-center">

    <h2>Publicar Poryecto</h2>

</div>

<div>

    <form method="post" asp-controller="Project" asp-action="Publish" class="bg-dark text-white w-50 rounded rounded-top" style="position:relative; border:2px solid aqua; left:50%; transform: translateX(-50%);">

        <div class="p-3 m-0 align-content-center border border-info">

            <div class="form-group ">
                <label asp-for="Name"> Titulo</label><br />
                <input class="w-100" asp-for="Name" required type="text" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group ">
                <label asp-for="Description"> Descripccion </label><br />
                <textarea class="w-100" asp-for="Description" rows="5"></textarea>
            </div>

            <div class="form-group ">
                <label asp-for="PublishDate"> Fecha de publicación  @fecha.Substring(0, 11) </label><br />
                <input hidden asp-for="PublishDate" type="date" />
            </div>

            <div>

                <div class="form-group d-inline-block">
                    <label asp-for="CloseDate"> Fecha de Cierre </label><br />
                    <input asp-for="CloseDate" type="date" id="@InputCloseDate" name="username" />
                </div>

                <div class="d-inline-block float-right">
                    <br />
                    <input type="checkbox" id="@CheckCloseDate" onclick="ChecClose(@CheckCloseDate,@InputCloseDate)" />
                    <label> Sin Fecha de Cierre </label>
                </div>

            </div>

            <div>

                <div class="form-group d-inline-block">
                    <label asp-for="PostulantsLimit"> Limite de postulantes </label><br />
                    <input asp-for="PostulantsLimit" value="@Model.PostulantsLimit" type="number" id="@MaxPastilants" min="0" max="50" />
                </div>

                <div class="d-inline-block float-right">
                    <br />
                    <input type="checkbox" id="@CheckPostulant" onclick="MaxPostulant(@CheckPostulant,@MaxPastilants)" />
                    <label>Maximo de postulantes</label>
                </div>

            </div>

        </div>

        <div class="p-0 m-0">
            <input class="btn btn-dark col" onclick="MaxPostulantOff(@CheckPostulant,@MaxPastilants,@CheckCloseDate,@InputCloseDate)" type="submit" value="Publicar" />
            <br />
        </div>

    </form>

</div>

@section Scripts {

    <partial name="_ValidationScriptsPartial" />

}
